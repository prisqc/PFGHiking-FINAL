<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/lightgreen2"
    android:alpha="1.5"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">



    <RelativeLayout
        android:id="@+id/LayoutBorrar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            app:tint="@color/white"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/TV_name_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:padding="10dp"
            android:textColor="@color/lightbrown"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="90dp"
        android:text="Distancia: "
        android:textAlignment="center"
        android:textColor="@color/lightbrown"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TV_distRuta_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:hint="Distancia"
        android:textSize="20dp"
        android:textAlignment="textStart"
        android:layout_marginTop="90dp"
        android:layout_marginStart="130dp"
        android:layout_marginEnd="150dp"
        android:textColor="@color/lightbrown"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="130dp"
        android:text="Desnivel: "
        android:textAlignment="center"
        android:textColor="@color/lightbrown"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TV_desnRuta_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:hint="Desnivel"
        android:textSize="20dp"
        android:textColor="@color/lightbrown"
        android:textAlignment="textStart"
        android:layout_marginTop="130dp"
        android:layout_marginStart="130dp"
        android:layout_marginEnd="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="170dp"
        android:text="DuraciÃ³n: "
        android:layout_marginBottom="5dp"
        android:textAlignment="center"
        android:textColor="@color/lightbrown"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TV_User_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="250dp"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="30dp"
            android:hint="UserName"
            android:textAlignment="textStart"
            android:textColor="@color/lightbrown"
            android:textSize="10sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_Ruta_Layout" />


        <ImageView
            android:id="@+id/img_Ruta_Layout"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_alignTop="@id/TV_name_Layout"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="20dp"
            android:paddingBottom="5dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TV_name_Layout" />


    <TextView
        android:id="@+id/TV_timeRuta_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:hint="Tiempo"
        android:textSize="20dp"
        android:textColor="@color/lightbrown"
        android:textAlignment="textStart"
        android:layout_marginTop="170dp"
        android:layout_marginStart="130dp"
        android:layout_marginEnd="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"   />

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>